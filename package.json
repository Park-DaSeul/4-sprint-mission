{
  "name": "test",
  "version": "1.0.0",
  "main": "src/app.js",
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "--- TEST ---": "",
    "test:websocket": "ts-node scripts/test.websocket.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:setup": "npm run test:migrate && npm run test:generate",
    "test:generate": "dotenv -e .env.test prisma generate",
    "test:migrate": "dotenv -e .env.test prisma migrate deploy",
    "test:unit": "vitest run --dir test/unit",
    "test:unit:modules": "vitest run --coverage test/unit/modules",
    "test:unit:articleComments": "vitest run test/unit/modules/articleComments.service.test.ts",
    "--- TEST:INTEGRATION ---": "",
    "test:integration": "vitest run --dir test/integration --maxWorkers=1",
    "test:integration:articleComments": "vitest run test/integration/articleComments.test.ts --maxWorkers=1",
    "test:integration:articleImages": "vitest run test/integration/articleImages.test.ts --maxWorkers=1",
    "test:integration:articleLikes": "vitest run test/integration/articleLikes.test.ts --maxWorkers=1",
    "test:integration:articles": "vitest run test/integration/articles.test.ts --maxWorkers=1",
    "test:integration:auth": "vitest run test/integration/auth.test.ts --maxWorkers=1",
    "test:integration:notifications": "vitest run test/integration/notifications.test.ts --maxWorkers=1",
    "test:integration:productComments": "vitest run test/integration/productComments.test.ts --maxWorkers=1",
    "test:integration:productImages": "vitest run test/integration/productImages.test.ts --maxWorkers=1",
    "test:integration:productLikes": "vitest run test/integration/productLikes.test.ts --maxWorkers=1",
    "test:integration:products": "vitest run test/integration/products.test.ts --maxWorkers=1",
    "test:integration:userImages": "vitest run test/integration/userImages.test.ts --maxWorkers=1",
    "test:integration:users": "vitest run test/integration/users.test.ts --maxWorkers=1",
    "--- FORMATTING ---": "",
    "format": "prettier --write .",
    "--- BUILD/RUN ---": "",
    "dev": "nodemon --exec tsx src/server.ts",
    "start": "NODE_ENV=production node dist/app.js",
    "build": "tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/busboy": "^1.5.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.7",
    "dotenv-cli": "^11.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/express": "^5.0.3",
    "bcrypt": "^6.0.0",
    "busboy": "^1.6.0",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "socket.io": "^4.8.1",
    "zod": "^4.0.15"
  }
}
