###
# @name signup
POST {{baseUrl}}/auth/signup HTTP/1.1
Content-Type: application/json

{
  "email": "test3@example.com",
  "password": "password123",
  "confirmPassword": "password123",
  "nickname": "슬이당3"
}

###
# @name login
# After logging in, the REST Client extension will automatically handle the
# access and refresh token cookies for subsequent requests.
POST {{baseUrl}}/auth/login HTTP/1.1
Content-Type: application/json

{
   "email": "test3@example.com",
  "password": "password123"
}

###
# @name refresh
POST {{baseUrl}}/auth/refresh HTTP/1.1
Content-Type: application/json

{ 
}

###
# @name logout
POST {{baseUrl}}/auth/logout HTTP/1.1

