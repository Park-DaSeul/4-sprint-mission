generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================================
// ENUMS
// ===================================

enum NotificationType {
  PRODUCT_LIKE
  ARTICLE_LIKE
  PRODUCT_COMMENT
  ARTICLE_COMMENT
  PRODUCT_PRICE_CHANGE
}

// ===================================
// CORE MODELS 
// ===================================

// 사용자
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  nickname  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userImage       UserImage?
  products        Product[]
  articles        Article[]
  productComments ProductComment[]
  articleComments ArticleComment[]
  productLikes    ProductLike[]
  articleLikes    ArticleLike[]

  receivedNotifications Notification[] @relation("ReceivedNotifications") // 알림을 받는 사용자 (User)
  sentNotifications     Notification[] @relation("SentNotifications") // 알림을 보내는 사용자 (User)
}

// 상품
model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Int
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  productImages   ProductImage[]
  productComments ProductComment[]
  productLikes    ProductLike[]
}

// 게시글
model Article {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  articleImages   ArticleImage[]
  articleComments ArticleComment[]
  articleLikes    ArticleLike[]
}

// ===================================
// IMAGE MODELS
// ===================================

// 사용자 프로필 이미지 
model UserImage {
  id        String   @id @default(uuid())
  fileUrl   String
  publicId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId String? @unique
}

// 상품 이미지
model ProductImage {
  id        String   @id @default(uuid())
  fileUrl   String
  publicId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  productId String?
}

// 게시글 이미지
model ArticleImage {
  id        String   @id @default(uuid())
  fileUrl   String
  publicId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  article   Article? @relation(fields: [articleId], references: [id], onDelete: SetNull)
  articleId String?
}

// ===================================
// COMMENT MODELS 
// ===================================

// 상품 댓글
model ProductComment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
}

// 게시글 댓글
model ArticleComment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String
}

// ===================================
// LIKE MODELS
// ===================================

// 상품 좋아요
model ProductLike {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@unique([userId, productId]) // 유저가 같은 상품에 여러번 좋아요 누르는 것을 방지
}

// 게시글 좋아요
model ArticleLike {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String

  @@unique([userId, articleId]) // 유저가 같은 게시글에 여러번 좋아요 누르는 것을 방지
}

// ===================================
// NOTIFICATION MODEL 
// ===================================

model Notification {
  id        String           @id @default(uuid())
  entityId  String? // 알림이 연결된 대상(상품/게시글/댓글 등)의 ID
  type      NotificationType
  message   String
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  recipient   User    @relation("ReceivedNotifications", fields: [recipientId], references: [id], onDelete: Cascade)
  recipientId String // 알림을 받는 사용자 (User)
  sender      User?   @relation("SentNotifications", fields: [senderId], references: [id], onDelete: SetNull)
  senderId    String? // 알림을 보낸 사용자 (User)

  @@index([recipientId, isRead])
  @@index([recipientId, createdAt])
}
